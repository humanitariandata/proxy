{
  "multipleApplications": true,
  "allowedDomains": "*",
  "mainPort": 80,
  
  "startHttpsProxy": false,
  "httpsTargets": [
    {
      "targetPort": 445,
      "target": "https://localhost",
      "sourcePort": 443,
      "source": "sapplies.rodekruis.nl"
    },
    {
      "targetPort": 444,
      "target": "https://localhost",
      "sourcePort": 443,
      "source": "digidoc.rodekruis.nl"
    }
  ],
  
  "startHttpProxy": true,
  "httpTargets": [
    {
      "targetPort": 3001,
      "target": "http://localhost",
      "sourcePort": 80,
      "source": "sapplies.rodekruis.nl"
    },
    {
      "targetPort": 3000,
      "target": "http://localhost",
      "sourcePort": 80,
      "source": "digidoc.rodekruis.nl"
    }
  ], 
  
  "sslport": 443,
  "key_file": "./config/cert/rodekruis-key.pem",
  "cert_file": "./config/cert/rodekruis-cert.pem"
}